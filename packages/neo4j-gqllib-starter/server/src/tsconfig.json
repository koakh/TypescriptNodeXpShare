{
  // don't use tsconfig.base.json gives problems building docker images
  // "extends": "../../../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    // extend base
    // "baseUrl": "./",
    "outDir": "../dist",
    "target": "ES2019",
  }
}
